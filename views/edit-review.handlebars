<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Review
  </h2>
  <form class="edit-reviews-form">
    <div class="review-row">
      <textarea name="review-body" id="textarea">{{reviews_text}}</textarea>
    </div>
    <div>
      Posted by you on {{format_date reviews.createdAt}}
      
      <a href="/reviews/{{reviews.id}}">{{reviews.length}} {{reviews.length}}</a>
    </div>
    <button type="submit">Save Review</button>
    <button type="button" class="delete-review-btn">Delete Review</button>
  </form>
</article>


<!--Scripts-->
{{#if loggedIn}}
<script src="/javascript/edit-review.js"></script>
<script src="/javascript/delete-review.js"></script>
{{/if}}